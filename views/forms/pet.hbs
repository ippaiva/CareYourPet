<form>
  <div class="form-group">
    <label for="inputDogName">Name</label>
    <input type="text" class="form-control" id="inputDogName" placeholder="ToTó">
  </div>
      <div class="form-group">
      <label for="Type">Tipo de Pet</label>
      <select class="form-control" name="type" id="typePet">
        <option>Cachorro</option>
        <option>Gato</option>
        <option>Ave</option>
        <option>Outros</option>
      </select>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputRace">Race</label>
      <input type="text" class="form-control" id="inputCity">
    </div>
    <div class="form-group">
      <label for="PortSize">Port size</label>
      <select class="form-control" id="PortSize">
        <option>Toy</option>
        <option>Pequeno</option>
        <option>Médio</option>
        <option>Grande</option>
        <option>Gigante</option>
      </select>
    <div class="form-group col-md-2">
      <label for="inputAge">Age</label>
      <input type="text" name="age" class="form-control" id="inputAge">
    </div>
      <div class="form-group col-md-6">
        <label for="inputCor">Cor</label>
        <input type="text" name="cor" class="form-control" id="inputCor">
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>
